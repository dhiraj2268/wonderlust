<% layout("/layouts/boilerplate")%>

<div class="row mt-3">
    <div class="col-6 offset-3">
        <h1>Signup on Wonderlust</h1>
        <form action="/signup" method="POST" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input type="text" name="username" placeholder="" class="form-control" id="username" required>
                <div class="valid-feedback">looks good</div>
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" name="email" placeholder="" class="form-control" id="email" required>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" name="password" placeholder="" class="form-control" id="password" required>
            </div>
            <button class="btn btn-success">Signup</button>
        </form>
    </div>
</div>